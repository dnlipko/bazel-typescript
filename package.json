{
  "name": "bazel-typescript-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "build": "bazel build //apps/web:build",
    "dev": "bazel run //apps/web:dev",
    "build:web": "pnpm --filter @monorepo/web build",
    "dev:web": "pnpm --filter @monorepo/web dev"
  },
  "devDependencies": {
    "@bazel/ibazel": "^0.24.0"
  }
}
