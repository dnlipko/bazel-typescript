{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@web/*": ["./apps/web/src/*"]
    },
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true
  },
  "include": ["apps/*/src/**/*.ts", "apps/*/src/**/*.tsx"],
  "exclude": ["node_modules"]
} 